.post_container {
    margin-top:20rpx;
    margin-bottom:20rpx;
    background-color:#ffffff;
    padding-bottom:10rpx;
    border-bottom:1px solid #cfcfcf;
    display: flex; /* 指定弹性布局 */
    flex-direction: column; /* 垂直布局 */
}
.post-author-date {
    margin: 10rpx 0 20rpx 20rpx;
}
.post-author-date image {
    width:60rpx;
    height:60rpx;
    vertical-align:middle;
}
.post-author-date text {
    font-size:26rpx;
    margin-left:20rpx;
    vertical-align:middle;
    color:#333;
}
.post_title {
    margin-left:20rpx;
    margin-bottom:20rpx;
    font-weight:bold;
    font-size:34rpx;
    color:#333;
}
.post_image {
    width:100%;
    height:340rpx;
    margin:auto 0;
}
.post_content {
    font-size:28rpx;
    padding:20rpx 20rpx 10rpx 20rpx;
    letter-spacing:2rpx;
    color:#666;
}
.post-like {
    width:100%;
}
.post-like image {
    width:24rpx;
    height:24rpx;
    margin-left:20rpx;
    margin-right:10rpx;
    vertical-align:middle;
}
.post-like text {
    font-size:24rpx;
    vertical-align:middle;
}
.second_img {
     padding-left:20rpx;
}
