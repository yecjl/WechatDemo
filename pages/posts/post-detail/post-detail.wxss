.post-detail-container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  top: 175rpx;
  left: 50%;
  margin-left: -51rpx;
  opacity: 0.6;
}

.post-detail-author {
  padding: 24rpx;
  flex-direction: row;
}

.post-detail-author image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.post-detail-author text {
  color: #666;
  vertical-align: middle;
}

.author-name {
  font-size: 30rpx;
  font-weight: 300;
  margin: 0rpx 20rpx 0 20rpx;
  color: #666;
}

.author-publish {
  color: #999;
}

.author-date {
  margin: 0rpx 20rpx 0 20rpx;
  color: #999;
}

.post-detail-title {
  margin-left: 24rpx;
  margin-right: 24rpx;
  font-size:36rpx;
  color: #666;
  letter-spacing: 4rpx;
  font-weight: 700;
}
.post-detail-tools {
  flex-direction: row;
  margin: 20rpx 20rpx 0 20rpx;
}
.tools-line {
  width: 100%;
  height: 1px;
  background: #e5e5e5;
  position: relative;
  top: 45rpx;
  vertical-align: middle;
  z-index: -99;
}
.tools-button {
  float: right;
}
.tools-button image {
  vertical-align: middle;
  width: 90rpx;
  height: 90rpx;
}
.button-share {
  margin-left: 30rpx;
}
.post-detail-content {
  margin: 24rpx;
  letter-spacing: 2rpx;
  line-height: 44rpx;
  color: #666;
}